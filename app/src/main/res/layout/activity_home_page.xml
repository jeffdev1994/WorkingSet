<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:showDividers="middle"
        android:divider="@drawable/emptymainseperate"
        tools:context=".HomePage"
        android:paddingTop="5dp">


        <ImageButton
            android:layout_width="42dp"
            android:layout_height="39dp"
            android:id="@+id/imageButton"
            android:layout_gravity="right"
            android:src="@android:drawable/ic_menu_help"
            android:background="@color/background_material_light"
            android:tint="#ff5ea7c8" />

        <Button
            android:id="@+id/start_workout_button"

            android:text="Start Workout"
            android:textColor="#FFFFFF"
            android:textSize="30sp"

            android:layout_width="260dp"
            android:layout_height="60dp"
            android:background="@drawable/homepagebuttons"
            android:layout_gravity="center_horizontal"
            android:elegantTextHeight="true"
            android:enabled="true" />



        <Button
            android:id="@+id/past_workout_button"

            android:text="Past Workout"
            android:textColor="#FFFFFF"
            android:textSize="30sp"

            android:layout_width="260dp"
            android:layout_height="60dp"
            android:background="@drawable/homepagebuttons"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/create_workout_button"

            android:text="Create Workout"
            android:textColor="#FFFFFF"
            android:textSize="30sp"

            android:layout_width="260dp"
            android:layout_height="60dp"
            android:background="@drawable/homepagebuttons"
            android:layout_gravity="center_horizontal"
            android:onClick="gotocreateworkout" />

        <Button
            android:id="@+id/main_exercises_button"

            android:text="Exercises"
            android:textColor="#FFFFFF"
            android:textSize="30sp"

            android:layout_width="260dp"
            android:layout_height="60dp"
            android:background="@drawable/homepagebuttons"
            android:layout_gravity="center_horizontal"

            android:onClick="gotoexercises"/>

        <Button
            android:id="@+id/main_stats_button"

            android:text="Statistics -Coming Soon"
            android:textColor="#FFFFFF"
            android:textSize="30sp"

            android:layout_width="260dp"
            android:layout_height="80dp"
            android:background="@drawable/homepagebuttons"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>
</ScrollView>
